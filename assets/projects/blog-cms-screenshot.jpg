  <rect x="220" y="230" width="250" height="15" fill="#8b5cf6" opacity="0.1" rx="4"/>
  <rect x="220" y="250" width="280" height="15" fill="#8b5cf6" opacity="0.1" rx="4"/>
  <rect x="220" y="270" width="200" height="15" fill="#8b5cf6" opacity="0.1" rx="4"/>
  
  <!-- Publish button -->
  <rect x="460" y="320" width="80" height="25" fill="#10b981" opacity="0.8" rx="4"/>
