  <rect x="50" y="260" width="130" height="20" fill="#8b5cf6" opacity="0.1" rx="4"/>
  
  <!-- Main content area -->
  <rect x="210" y="150" width="350" height="200" fill="white" stroke="#8b5cf6" stroke-width="1" opacity="0.3" rx="8"/>
  
  <!-- Editor toolbar -->
  <rect x="220" y="160" width="330" height="30" fill="#8b5cf6" opacity="0.1"/>
  <rect x="230" y="167" width="20" height="16" fill="#8b5cf6" opacity="0.3" rx="2"/>
