<svg width="600" height="400" viewBox="0 0 600 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="taskGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#06d6a0;stop-opacity:0.1" />
      <stop offset="100%" style="stop-color:#06d6a0;stop-opacity:0.3" />
    </linearGradient>
    <pattern id="taskGrid" width="40" height="40" patternUnits="userSpaceOnUse">
      <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#06d6a0" stroke-width="0.5" opacity="0.2"/>
    </pattern>
  </defs>
  
  <!-- Background -->
  <rect width="600" height="400" fill="#f8fafc"/>
  <rect width="600" height="400" fill="url(#taskGrid)"/>
  
  <!-- Browser chrome -->
  <rect width="600" height="50" fill="#e2e8f0"/>
  <circle cx="20" cy="25" r="6" fill="#ef4444"/>
  <circle cx="40" cy="25" r="6" fill="#f59e0b"/>
  <circle cx="60" cy="25" r="6" fill="#10b981"/>
  <rect x="100" y="15" width="400" height="20" rx="10" fill="#f1f5f9"/>
  
  <!-- Content area -->
  <rect x="20" y="70" width="560" height="310" fill="white" stroke="#06d6a0" stroke-width="1" opacity="0.5"/>
  <rect x="20" y="70" width="560" height="60" fill="url(#taskGradient)"/>
  
  <!-- Header -->
  <text x="300" y="105" font-family="Arial, sans-serif" font-size="24" font-weight="bold" 
        text-anchor="middle" fill="#06d6a0">Task Manager</text>
  
  <!-- Task columns -->
  <rect x="40" y="150" width="150" height="200" fill="#06d6a0" opacity="0.1" rx="8"/>
  <rect x="210" y="150" width="150" height="200" fill="#f59e0b" opacity="0.1" rx="8"/>
  <rect x="380" y="150" width="150" height="200" fill="#3b82f6" opacity="0.1" rx="8"/>
  
  <!-- Column headers -->
  <text x="115" y="175" font-family="Arial, sans-serif" font-size="12" font-weight="bold" 
        text-anchor="middle" fill="#06d6a0">To Do</text>
  <text x="285" y="175" font-family="Arial, sans-serif" font-size="12" font-weight="bold" 
        text-anchor="middle" fill="#f59e0b">In Progress</text>
  <text x="455" y="175" font-family="Arial, sans-serif" font-size="12" font-weight="bold" 
        text-anchor="middle" fill="#3b82f6">Done</text>
  
  <!-- Task cards -->
  <rect x="50" y="190" width="130" height="30" fill="white" stroke="#06d6a0" stroke-width="1" rx="4"/>
  <rect x="50" y="230" width="130" height="30" fill="white" stroke="#06d6a0" stroke-width="1" rx="4"/>
  
  <rect x="220" y="190" width="130" height="30" fill="white" stroke="#f59e0b" stroke-width="1" rx="4"/>
  
  <rect x="390" y="190" width="130" height="30" fill="white" stroke="#3b82f6" stroke-width="1" rx="4"/>
  <rect x="390" y="230" width="130" height="30" fill="white" stroke="#3b82f6" stroke-width="1" rx="4"/>
  <rect x="390" y="270" width="130" height="30" fill="white" stroke="#3b82f6" stroke-width="1" rx="4"/>
</svg>