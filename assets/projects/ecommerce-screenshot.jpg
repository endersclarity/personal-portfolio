<svg width="600" height="400" viewBox="0 0 600 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="ecommerceGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ef4444;stop-opacity:0.1" />
      <stop offset="100%" style="stop-color:#ef4444;stop-opacity:0.3" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="600" height="400" fill="#f8fafc"/>
  
  <!-- Browser chrome -->
  <rect width="600" height="50" fill="#e2e8f0"/>
  <circle cx="20" cy="25" r="6" fill="#ef4444"/>
  <circle cx="40" cy="25" r="6" fill="#f59e0b"/>
  <circle cx="60" cy="25" r="6" fill="#10b981"/>
  <rect x="100" y="15" width="400" height="20" rx="10" fill="#f1f5f9"/>
  
  <!-- Content area -->
  <rect x="20" y="70" width="560" height="310" fill="white" stroke="#ef4444" stroke-width="1" opacity="0.5"/>
  <rect x="20" y="70" width="560" height="60" fill="url(#ecommerceGradient)"/>
  
  <!-- Header -->
  <text x="300" y="105" font-family="Arial, sans-serif" font-size="24" font-weight="bold" 
        text-anchor="middle" fill="#ef4444">E-commerce Platform</text>
  
  <!-- Product grid -->
  <rect x="40" y="150" width="120" height="120" fill="#ef4444" opacity="0.1" rx="8"/>
  <rect x="180" y="150" width="120" height="120" fill="#ef4444" opacity="0.1" rx="8"/>
  <rect x="320" y="150" width="120" height="120" fill="#ef4444" opacity="0.1" rx="8"/>
  <rect x="460" y="150" width="120" height="120" fill="#ef4444" opacity="0.1" rx="8"/>
  
  <!-- Product placeholders -->
  <rect x="60" y="170" width="80" height="60" fill="#ef4444" opacity="0.2" rx="4"/>
  <rect x="200" y="170" width="80" height="60" fill="#ef4444" opacity="0.2" rx="4"/>
  <rect x="340" y="170" width="80" height="60" fill="#ef4444" opacity="0.2" rx="4"/>
  <rect x="480" y="170" width="80" height="60" fill="#ef4444" opacity="0.2" rx="4"/>
  
  <!-- Price tags -->
  <text x="100" y="250" font-family="Arial, sans-serif" font-size="12" font-weight="bold" 
        text-anchor="middle" fill="#ef4444">$99</text>
  <text x="240" y="250" font-family="Arial, sans-serif" font-size="12" font-weight="bold" 
        text-anchor="middle" fill="#ef4444">$149</text>
  <text x="380" y="250" font-family="Arial, sans-serif" font-size="12" font-weight="bold" 
        text-anchor="middle" fill="#ef4444">$79</text>
  <text x="520" y="250" font-family="Arial, sans-serif" font-size="12" font-weight="bold" 
        text-anchor="middle" fill="#ef4444">$199</text>
  
  <!-- Shopping cart -->
  <rect x="460" y="290" width="120" height="50" fill="#10b981" opacity="0.1" rx="8"/>
  <text x="520" y="318" font-family="Arial, sans-serif" font-size="12" font-weight="bold" 
        text-anchor="middle" fill="#10b981">Add to Cart</text>
  
  <!-- Navigation -->
  <rect x="40" y="290" width="80" height="20" fill="#ef4444" opacity="0.2" rx="4"/>
  <rect x="130" y="290" width="80" height="20" fill="#ef4444" opacity="0.1" rx="4"/>
  <rect x="220" y="290" width="80" height="20" fill="#ef4444" opacity="0.1" rx="4"/>
</svg>